<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lab02_5">
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="120dp"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:text="Name:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        app:layout_constraintStart_toEndOf="@+id/txt_name"
        app:layout_constraintTop_toTopOf="@id/txt_name"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txt_thumbnail"
        android:layout_width="120dp"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:text="Thumbnail:"
        app:layout_constraintTop_toBottomOf="@+id/edit_name"
        app:layout_constraintStart_toStartOf="parent" />
    <Spinner
        android:id="@+id/spin_thumbnail"
        android:spinnerMode="dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txt_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/edit_name"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txt_promotion"
        android:layout_width="120dp"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:text="Promotion:"
        app:layout_constraintTop_toBottomOf="@+id/spin_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>
    <CheckBox
        android:id="@+id/check_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txt_promotion"
        app:layout_constraintTop_toBottomOf="@id/spin_thumbnail"/>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_promotion"
        android:layout_marginTop="10dp"
        android:text="ADD A NEW DISH"/>
    <GridView
        android:id="@+id/grid_dish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_add"
        android:layout_marginTop="10dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>